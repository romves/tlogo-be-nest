generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "mysql"
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // url      = "mysql://root:@localhost:3306/tlogodb"
  directUrl = env("DIRECT_URL")
}

model UMKM {
  id                String     @id @default(cuid())
  nama              String
  alamat            String
  koordinat_umkm    String[]
  nama_pemilik      String
  nomor_hp          String
  rentang_harga     String
  kelengkapan_surat String
  foto              FotoUMKM[]
  produk            String
  volume            String?

  @@map("umkm")
}

